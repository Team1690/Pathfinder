{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug GO Backend",
      "type": "go",
      "request": "launch",
      "args": [
        "--port",
        "3000",
        "dev"
      ],
      "mode": "auto",
      "program": "${workspaceFolder}/algorithm"
    },
    {
      "name": "Debug Flutter Frontend",
      "program": "${workspaceFolder}/gui/lib/main.dart",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "args": ["--no-sound-null-safety"],
      "type": "dart",
      "flutterMode": "debug"
    },
    {
      "name": "Pathfinder (profile mode)",
      "program": "${workspaceFolder}/gui/lib/main.dart",
      "request": "launch",
      "type": "dart",
      "flutterMode": "profile"
    },
    {
      "name": "Pathfinder (release mode)",
      "program": "${workspaceFolder}/gui/lib/main.dart",
      "request": "launch",
      "type": "dart",
      "flutterMode": "release"
    },
  ]
}
